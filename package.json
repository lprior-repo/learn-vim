{
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run build.ts",
    "build:prod": "NODE_ENV=production bun run build.ts",
    "dev": "bun run build.ts && bun run --watch server.ts",
    "start": "bun run server.ts",
    "deploy": "bun run build:prod && bun run server.ts",
    "test": "npx playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:components": "playwright test tests/components/",
    "test:pages": "playwright test tests/pages/",
    "test:vim-commands": "playwright test tests/vim-commands.spec.ts",
    "test:hjkl": "playwright test tests/hjkl.spec.ts",
    "test:all-headed": "playwright test --headed"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "acorn-walk": "^8.3.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "codemirror": "^6.0.1",
    "lucide-react": "^0.294.0",
    "monaco-editor": "^0.44.0",
    "monaco-vim": "^0.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.2",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  }
}
